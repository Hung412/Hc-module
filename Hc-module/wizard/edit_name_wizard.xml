<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_edit_name_form" model="ir.ui.view">
			<field name="name">view.edit.name.form</field>
			<field name="model">edit.views.wizard</field>
			<field name="arch" type="xml">
				<form string="Edit Name Book">
					<sheet>
						<div class="alert alert-info" role="alert">
							This wizard helps you edit name
						</div>
						<group>
							<field name="name" />
							<field name="type" />
							<field name="book_id"/>
						</group>
						<footer>
							<button name="action_edit_name" type="object" string="Save" class="oe_highlight" />
							<button special="cancel" string="Cancel" />
						</footer>
					</sheet>
				</form>
			</field>
		</record>
	
